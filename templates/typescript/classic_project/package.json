{
  "name": "api-server-project",
  "version": "0.1.0",
  "description": "Sample Web Application",
  "main": "dist/server.js",
  "repository": "",
  "private": true,
  "author": "",
  "scripts": {
    "start": "node bin/www.js",
    "clean": "rimraf dist/server",
    "build": "rimraf dist/server && babel server --out-dir dist/server --copy-files --source-maps",
    "themost": "themost",
    "serve": "nodemon bin/www.js",
    "debug": "nodemon --inspect-brk bin/www.js"
  },
  "devDependencies": {
    "@themost/cli": "^2.1.1",
    "@types/node": "^10.5.0",
    "@typescript-eslint/eslint-plugin": "^1.5.0",
    "@typescript-eslint/eslint-plugin-tslint": "^1.7.0",
    "@typescript-eslint/parser": "^1.5.0",
    "eslint": "^5.16.0",
    "nodemon": "^1.19.0",
    "rimraf": "^2.6.3",
    "ts-node": "^7.0.0",
    "tslint": "^5.14.0",
    "typescript": "^2.9.2",
    "typescript-eslint-parser": "^22.0.0"
  },
  "dependencies": {
    "@themost/client": "^2.1.3",
    "@themost/common": "^2.3.1",
    "@themost/data": "^2.4.0-dev.2",
    "@themost/node": "^2.1.1",
    "@themost/query": "^2.3.1",
    "@themost/sqlite": "^2.2.1",
    "@themost/web": "^2.4.0-dev.2",
    "@themost/xml": "^2.3.1",
    "bootstrap": "^4.1.1",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.7"
  },
  "nodemonConfig": {
    "watch": [
      "server/",
      "./bin/www.js"
    ],
    "verbose": true,
    "execMap": {
      "js": "node --require ts-node/register"
    },
    "env": {
      "NODE_ENV": "development"
    },
    "ext": "ts,js,json"
  }
}
